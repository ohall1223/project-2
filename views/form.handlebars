<section>
  <div class="mx-auto p-4 bg-white rounded-lg shadow-xl">
    <h2 class="text-4xl font-bold text-blue-800">
      Tell us about your patient
    </h2>
    <form class="form create-patient">
      <div class="m-auto px-2 py-4">

        <label for="firstName">First name</label>
        <input class="border rounded-md w-full" type="text" id="firstName" />
      </div>
      <div class="m-auto px-2 py-4">
        <label for="lastName">Last name</label>
        <input class="border rounded-md w-full" type="text" id="lastName" />
      </div>
      <div class="m-auto px-2 py-4">
        <label for="height">Patient's height in feet (example: 6.1)?</label>
        <input class="border rounded-md w-full" type="text" id="height" />
      </div>
      <div class="m-auto px-2 py-4">
        <label for="weight">Patient's weight?</label>
        <input class="border rounded-md w-full" type="text" id="weight" />
      </div>
      <div class="m-auto px-2 py-4">
        <label for="currentMeds">If patient has any current medications, please
          list them here</label>
        <input
          class="border rounded-md w-full"
          type="text"
          id="current-medication"
        />
      </div>
      <div class="m-auto px-2 py-4">
        <label for="primaryPhysician">If the patient has a Primary Care
          Physician, list them here</label>
        <input class="border rounded-md w-full" type="text" id="primary-care" />
      </div>
      <div class="m-auto px-2 py-4">
        <label for="current-pharmacy">If the patient has a pharmacy, list them
          here</label>
        <input
          class="border rounded-md w-full"
          type="text"
          id="current-pharmacy"
        />
      </div>
      <div class="m-auto px-2 py-4">
        <button
          class="bg-blue-500 text-white m-auto py-1 px-4 rounded-lg hover:bg-blue-400"
          type="submit"
        >
          Save
        </button>
      </div>
    </form>
  </div>
</section>

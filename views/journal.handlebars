      />
    </div>
    <div class="m-auto px-2 py-4">
      <label for="medication-time">If so, when?</label>
      <input
        class="border rounded-md disabled:bg-gray-50 disabled:text-gray-500 disabled:border-gray-200 disabled:shadow-none"
        type="text"
        id="medication-time"
      />
    </div>

    <div class="m-auto px-2 py-4">
      <label for="current-symptoms">What are your current symptoms?</label>
      <input
        class="border rounded-md disabled:bg-gray-50 disabled:text-gray-500 disabled:border-gray-200 disabled:shadow-none"
        type="text"
        id="current-symptoms"
      />
    </div>
    <div class="m-auto px-2 py-4">
      <label for="additional-info">Any additional information you'd like to
        record?</label>
      <input
        class="border rounded-md h-20 w-80 disabled:bg-gray-50 disabled:text-gray-500 disabled:border-gray-200 disabled:shadow-none"
        type="text"
        id="additional-info"
      />
    </div>
    <div class="m-auto px-2 py-4">
      <button
        class="bg-blue-500 text-white m-auto py-1 px-4 rounded-lg hover:bg-blue-400"
        type="submit"
      >
        Submit
      </button>
    </div>
  </div>
</section>

